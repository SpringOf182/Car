/* pages/mine/feedback/feedback.wxss */
.main-container{
	width:86%;
	margin:40rpx auto auto auto;
}
.title {
	padding-bottom: 7rpx;
  font-size: 45rpx;
  color:  #605D5D ;
  border-bottom: solid #F9B536 2px;
}
.notice {
	display:block;
  margin-top: 32rpx;
  font-size: 32rpx;
  color: #808080;
}
textarea {
  height: 432rpx;
  background-color: #f5f5f5;
  padding: 10rpx;
  font-size: 30rpx;
  margin-top: 30rpx;
}
.post {
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  background-color:  #F9B536 ;
  color: white;
  width:60%;
  margin: 37px auto auto auto;
  border-radius: 8rpx;
  font-weight: bold;
  font-size: 32rpx;
}
