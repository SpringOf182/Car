<!--pages/mine/mine.wxml-->
<view class="user-info">
	<view class="user-content">
		<view class="userinfo-avatar">
			<open-data type="userAvatarUrl"></open-data>
		</view>
		<view class='userinfo-text'>
			<open-data type="userNickName"></open-data>
		</view>
	</view>
</view>
<view class="main-container">
	<view catchtap='onClearCacheTap' class="line">
		<image src="/images/mine/clear.png" class="line-img"></image>
		<view class="line-content">清除缓存</view>
		<image src="/images/mine/right.png" class="right-img"></image>
	</view>
	<view catchtap='onFeedbackTap' class="line">
		<image src="/images/mine/feedback.png" class="line-img"></image>
		<view class="line-content">反馈</view>
		<image src="/images/mine/right.png" class="right-img"></image>
	</view>
	<view catchtap='onAboutTap' class="line">
		<image src="/images/mine/about.png" class="line-img"></image>
		<view class="line-content">关于</view>
		<image src="/images/mine/right.png" class="right-img"></image>
	</view>
	<view catchtap='onHelpTap' class="line">
		<image src="/images/mine/help.png" class="line-img"></image>
		<view class="line-content">帮助</view>
		<image src="/images/mine/right.png" class="right-img"></image>
	</view>
</view>